<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.evalineju.myfirstapp.MainActivity">

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/ic_baby2"
        android:width="30dp"
        android:height="30dp"
        android:scaleType="fitXY"
        android:paddingTop="20dp"
        android:text="START"
        android:textSize="20sp"
        android:onClick="goToDeviceScan"
        android:textColor="#fff"
        android:id="@+id/button8"
        android:layout_marginBottom="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_above="@+id/button3"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toStartOf="@+id/button7"
        android:layout_x="20dp"
        android:layout_y="100dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:paddingTop="20dp"
        android:text="CONTACT LIST"
        android:onClick="goToContactView"
        android:textSize="20sp"
        android:textColor="#fff"
        app:layout_anchor="@+id/imgPicture"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="top|left"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_x="20dp"
        android:layout_y="275dp" />

    <Button
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/stat_sys_phone_call"
        android:paddingTop="20dp"
        android:text="Call for Help"
        android:onClick="makeCall"
        android:textSize="20sp"
        android:textColor="#fff"
        app:layout_anchor="@+id/imgPicture"
        android:id="@+id/button7"
        app:layout_anchorGravity="center_vertical|left"
        android:layout_gravity="top|right"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="130dp"
        android:layout_x="180dp"
        android:layout_y="100dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:drawableTop="@android:drawable/ic_dialog_info"
        android:paddingTop="20dp"
        android:text="Info"
        android:onClick="goToInfo"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_anchor="@+id/imgPicture"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="top|left"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_x="180dp"
        android:layout_y="275dp" />


</AbsoluteLayout>
